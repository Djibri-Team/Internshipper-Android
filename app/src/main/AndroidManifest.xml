<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.debeliya_i_kompaniya.internshipper">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.AllOffersActivity" />
        <activity android:name=".ui.MyOfferListActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.UserProfileActivity" />
        <activity android:name=".ui.SignUpActivity" />
        <activity android:name=".ui.AddOfferActivity"></activity>
        <activity android:name=".ui.EmployerHomePageActivity"></activity>
        <activity android:name=".ui.ApplicantsActivity"></activity>
        <activity android:name=".ui.InternshipDetailsActivity"></activity>
    </application>

</manifest>